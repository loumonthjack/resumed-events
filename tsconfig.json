{
  "compilerOptions": {
    "strict": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2021"],
    "target": "es2021",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"]
    },
    "plugins": [
      {
        "name": "@astro/ts-plugin",
      }
    ]
  },
  "files": [
    "src/server/main.ts",
    "src/@types/index.d.ts",
  ],
  // "include": ["src/server/*", "src/@types/index.d.ts"],
  // "exclude": [
  //   "node_modules",
  //   "src/server/worker.ts",
  //   "src/server/endpoints/networking/*"
  // ],
  
  "typescript.inlayHints.parameterNames.enabled": "all",
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "out"]
  }
}
